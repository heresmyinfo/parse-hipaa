<style>
  .brand-background {
    background-color: #FFFFFF;
  }

  .brand-button {
    background-color: #00A956;
    color: #FFFFFF;
    min-height: 60px;
    width: 100%;
    text-align: center;
    font-size: 16pt;
    font-family: 'Roboto';
    padding: 10px;
    border: none;
    margin: 0px auto 20px;
  }

  .brand-header {
    max-height: 100px;
    height: auto;
    max-width: 80%;
    text-align: center;
    margin: 30px auto 30px;
  }

  .button-container {
    width: 80%;
    margin: 0px auto;
    float: center;
    margin-top: 40px;
  }

  .invitation-card {
    margin: 10px;
    min-height: 10px;
  }

  .invitation-font {
    text-align: center;
    font-size: 20pt;
    font-family: 'Roboto';
    padding: 15px;
    margin: 0px auto 20px;
  }

  .image-center {
    display: block;
    margin-left: auto;
    margin-right: auto;
  }
</style>

<body class="brand-background">

  <div class="container">
    <div class="row">
      <img class="brand-header" src="/public/images/banner.png" />
    </div>
    <div class="row">
      <div class="col-lg-12 text-center invitation-card">
        <h3 id="mainMessage">waiting...</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3" style="margin-bottom: 20px">
        <h4 id="QRCodeData"></h4>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 text-center">
        <h4 class="text-center">Install HeresMyInfo to share back and receive updates of this data everytime it
          changes.</h4>
      </div>
      <div class="button-container" id="mobileView">
        <button type="submit" class="brand-button submit-button-mobile" id="openInApp">Open Information in Mobile
          App</button>
      </div>
      <div class="button-container" id="desktopView" style="align-content:center">
        <h3 class="text-center">Get your app for Android or IOS</h3>
        <img class="image-center" id="markets" width="60%" src="/public/images/markets.png" />
      </div>
    </div>
  </div>
  <!-- Parse -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/parse/1.9.2/parse.js"></script>
  <!-- Bootstrap -->
  <script src="https://netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  <!-- Custom script -->
  <script src="/public/parse.js"></script>
  <script src="/public/qrrequest.js"></script>
  <!-- Custom -->
</body>

</html>